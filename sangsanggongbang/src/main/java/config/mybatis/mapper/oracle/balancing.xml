<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gr.ssgb.balancing.model.BalancingDAO">
	<sql id="searchWhere">
		<if test="searchKeyword!=null and searchKeyword!=''">
			where ${searchCondition} like '%' || #{searchKeyword} || '%'
		</if>
	</sql>

	<select id="selectBalancingAll" parameterType="searchVo" resultType="balancingVo">
	select *
		from
		(
		    select rownum as RNUM, A.*
		    from
		    (
				select * from balancing
				<include refid="searchWhere"></include>
				order by b_no desc
			)A
		)
		<![CDATA[
		where RNUM>#{firstRecordIndex} 
			and RNUM<=#{firstRecordIndex}+ #{recordCountPerPage}]]>
	</select>

	<select id="selectTotalRecord" parameterType="searchVo" resultType="int">
		select count(*) from balancing
		<include refid="searchWhere"></include>	
	</select>
